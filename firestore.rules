rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isStaff() {
      return request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee-a' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee-b'
      );
    }
    
    function isAdminOrManager() {
      return request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager'
      );
    }

    match /users/{userId} {
      // Admins/Managers can manage any user. Users can read/write their own data.
      allow read, write: if isAdminOrManager() || (request.auth != null && request.auth.uid == userId);
    }

    match /config/{docId} {
      // Config is public to read, but only editable by admins/managers.
      allow get: if true;
      allow write: if isAdminOrManager();
    }

    match /cars/{carId} {
      // Anyone can see approved cars. Staff can see all cars.
      allow get: if resource.data.status == 'approved' || isStaff();
      // The public homepage needs to list approved cars.
      allow list: if true;
      
      // Employee-A can create cars.
      allow create: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee-a';
      
      // Admins/Managers can update any car. Employee-A can update their own submissions.
      allow update: if isAdminOrManager() || (request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'employee-a' && resource.data.submittedBy == request.auth.uid);
      
      // Admins/Managers can delete cars.
      allow delete: if isAdminOrManager();
    }
  }
}
